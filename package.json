{
  "scripts": {
    "build": "./node_modules/webpack/bin/webpack.js",
    "build:production": "rm -rf dist && NODE_ENV=production ./node_modules/webpack/bin/webpack.js -p --config webpack.production.config.js",
    "lint": "./node_modules/.bin/eslint \"app/**/*\"",
    "start": "./node_modules/webpack-dev-server/bin/webpack-dev-server.js --devtool eval --progress --colors --hot --content-base build",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "author": "Gustavo Bastos <me@gustavovinicius.com>",
  "license": "GPL-3.0",
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.4.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.22.0",
    "css-loader": "^0.27.1",
    "enzyme": "^2.7.1",
    "eslint": "^3.17.1",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "file-loader": "^0.10.1",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^19.0.2",
    "jest-css-modules": "^1.1.0",
    "node-sass": "^4.5.0",
    "react-addons-test-utils": "^15.4.2",
    "react-test-renderer": "^15.4.2",
    "redux-logger": "^2.8.2",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.13.2",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1"
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.3",
    "rebass": "^0.3.4",
    "redux": "^3.6.0",
    "reflexbox": "^2.2.3"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css)$": "<rootDir>/node_modules/jest-css-modules"
    },
    "moduleDirectories": [
      "app",
      "node_modules"
    ],
    "testRegex": "(/spec/.*|(\\.|/)(test|spec))\\.jsx?$",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "spec/",
      "scripts/"
    ],
    "setupFiles": ["./scripts/jest/reflexbox-setup.js"],
    "notify": true
  }
}
